generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @default(uuid())
  email    String   @unique
  name     String?
  role     Role     @default(USER)
  image    String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  visitas  Int?
}

enum Role {
  USER
  ADMIN
}
